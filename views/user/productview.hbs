

<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> {{proData.name}}
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product-detail accordion-detail">
                        <div class="row mb-50">
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-gallery">
                                    <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                    <!-- MAIN SLIDES -->
                                    <div class="product-image-slider">
                                        {{#each proData.imageUrl}}
                                        <figure class="border-radius-10">
                                            <img src="/images/products/{{this}}" alt="product image">
                                        </figure>
                                        {{/each}}
                                        
                                    </div>
                                </div>
                                <!-- End Gallery -->
                            </div>
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-info">
                                    <h2 class="title-detail">{{proData.name}}</h2>
                                
                                    <div class="clearfix product-price-cover">
                                        <div class="product-price primary-color float-left">
                                            <ins><span class="text-brand">₹{{proData.price}}</span></ins>
                                            <ins><span class="old-price font-md ml-15">₹{{proData.price}}</span></ins>
                                            <span class="save-price  font-md color3 ml-15">25% Off</span>
                                        </div>
                                    </div>
                                    <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                    <div class="short-desc mb-30">
                                        <p>{{proData.description}}</p>
                                    </div>
                                    <div class="product_sort_info font-xs mb-30">
                                        <ul>
                                            <li class="mb-10"><i class="fi-rs-crown mr-5"></i> Best intro to super heros in tamil</li>
                                            <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> Return, If any damages
                                            </li>
                                            <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available</li>
                                        </ul>
                                    </div>
                                    <div class="detail-extralink">
                                        <div class="product-extra-link2">

                                         
								  {{!-- {{#if proData.stock}} --}}
                                    {{#if outOfStock}}
                                    <span id="outofstock">
                                    <button id="outofstock-btn" class="btn btn-md "
                                    style="background-color: #dc3545;">Out of stock</button>
                                    </span>
                            </div>
                        </div>
                                    <ul class="product-meta font-xs color-grey mt-50">
                                        <li class="mb-5">SKU: <a href="#">FWM15VKT</a></li>
                                        <li class="mb-5">Tags: <a href="#" rel="tag">Book</a>, <a href="#"
                                                rel="tag">Learn</a>, <a href="#" rel="tag">Explore</a> </li>
                                         	{{#if proData.stock}}       
                                        <li>Availability:<span class="in-stock text-success ml-5">{{proData.stock}} Items In
                                                Stock</span></li>
						                {{else}}
                                        <li>Availability:<span class="in-stock text-success ml-5">Out of
                                                Stock</span></li>
                                                {{/if}}
                                    </ul>
                                </div>
                                <!-- Detail Info -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


