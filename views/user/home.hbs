<style>
..container {
  max-width: 1200px; /* Adjust max width to center the grid on wider screens */
  margin: 0 auto;
  padding: 0 20px;
}

.carausel-6-columns {
  display: flex;
  flex-wrap: wrap;
  justify-content: center; /* Centers the cards in the middle */
  gap: 20px; /* Space between the cards */
}

.card-1 {
  width: calc(100% / 3 - 20px); /* Three cards per row on larger screens */
  max-width: 200px;
  text-align: center;
  margin-bottom: 20px;
  transition: transform 0.3s ease;
  border-radius: 8px; /* Make sure cards have rounded corners too */
  overflow: hidden; /* Make sure content does not overflow */
}

.card-1:hover {
  transform: scale(1.05);
}

.img-hover-scale {
  width: 100%;
  height: 0;
  padding-top: 100%; /* Creates a 1:1 aspect ratio container for square images */
  position: relative; /* Keeps the image inside the container */
  overflow: hidden; /* Ensures any excess image is clipped */
}

.responsive-img {
  position: absolute; /* Makes sure the image fills the container completely */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensures the image covers the container, without stretching */
  border-radius: 8px; /* Keeps rounded corners on the image */
}

/* Responsive adjustments */
@media (max-width: 992px) {
  .card-1 {
    width: calc(100% / 2 - 15px); /* Two cards per row on medium screens */
  }
}

@media (max-width: 576px) {
  .card-1 {
    width: 100%; /* One card per row on small screens */
  }
}


</style>

